<checkbox-group bindchange="onCheckBoxSelect">
    <checkbox value="{{item.price}}" wx:for="{{list}}" wx:key="{{item.id}}">
        {{item.name}}
    </checkbox>
      
</checkbox-group>
<view >{{SelectedList}}</view>

<Tabs tabs="{{tabs}}" bindItemChange="onTabItemChange"></Tabs>


<block wx:if="{{tabs[0].isActive}}">序号0</block>    
<block wx:elif="{{tabs[1].isActive}}">序号1</block>    
<block wx:elif="{{tabs[2].isActive}}">序号2</block>    
<block wx:elif="{{tabs[3].isActive}}">序号3</block>    
